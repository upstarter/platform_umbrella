# Erlang version
erlang_version=19.0

# Elixir version
elixir_version=1.6.4

# Always rebuild from scratch on every deploy?
always_rebuild=false

# A command to run right before compiling the app (after elixir, .etc)
pre_compile="pwd"

# A command to run right after compiling the app
post_compile="pwd"

# Set the path the app is run from
# runtime_path=/app

clean_cache=false
compile="compile"
node_version=4.0 # 6.11.0
npm_version=3.0 # 3.10.10
phoenix_relative_path=apps/platform_web
remove_node=false
assets_path=assets/
phoenix_ex=phx
